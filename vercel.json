{
  "functions": {
    "api/sync.py": {
      "runtime": "python3.11",
      "memory": 1024,
      "maxDuration": 60,
      "includeFiles": "requirements.txt"
    }
  },
  "buildCommand": "pip install -r requirements.txt -t api/_vendor",
  "rewrites": [
    { "source": "/api/ping", "destination": "/api/ping" },
    { "source": "/api/ask", "destination": "/api/ask" },
    { "source": "/api/sync", "destination": "/api/sync" }
  ]
}
