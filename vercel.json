{
  "version": 2,
  "builds": [
    {
      "src": "api/*.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "20mb",
        "runtime": "python3.11"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/sync/(.*)",
      "dest": "/api/sync.py"
    }
  ],
  "installCommand": "pip install -r requirements.txt"
}
